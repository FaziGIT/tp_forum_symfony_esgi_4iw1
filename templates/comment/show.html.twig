{% extends 'base.html.twig' %}

{% block title %}Response{% endblock %}

{% block body %}
    <h1>Response</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ response.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ response.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ response.createdAt ? response.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ response.updatedAt ? response.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_response_index') }}">back to list</a>

    <a href="{{ path('app_response_edit', {'id': response.id}) }}">edit</a>

    {{ include('response/_delete_form.html.twig') }}
