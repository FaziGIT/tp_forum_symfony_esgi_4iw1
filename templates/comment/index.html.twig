{% extends 'base.html.twig' %}

{% block title %}Response index{% endblock %}

{% block body %}
    <h1>Response index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for response in responses %}
            <tr>
                <td>{{ response.id }}</td>
                <td>{{ response.content }}</td>
                <td>{{ response.createdAt ? response.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ response.updatedAt ? response.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_response_show', {'id': response.id}) }}">show</a>
                    <a href="{{ path('app_response_edit', {'id': response.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_response_new') }}">Create new</a>
{% endblock %}
