{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <h1 class="text-center text-2xl font-extrabold text-gray-900">Reset your password</h1>

            {{ form_start(requestForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    {{ form_row(requestForm.email, {'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm'}}) }}
                </div>
            </div>

            <div class="text-sm text-gray-600 mt-2">
                Enter your email address, and we will send you a link to reset your password.
            </div>

            <div>
                <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Send password reset email
                </button>
            </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
